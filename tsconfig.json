{
  "compilerOptions": {
    "target": "ES6", // The version of the ECMAScript standard that the code will be compiled into
    "lib": ["esnext"], // For nowadays syntax, saves all features, no transpilation
    "isolatedModules": true, // Each file should be separate module: must contain export, type via export type
    "esModuleInterop": true, // Allows importing CommonJS packages as ES6 (import instead require)
    "forceConsistentCasingInFileNames": true, // Enables case-sensitive mode for importing files
    "strict": true, // Enables all strict type checks:
    // noImplicitAny // Shows an error if the type "any" is specified somewhere
    // noImplicitThis // Shows an error on "this" if the type is "any" somewhere
    // alwaysStrict // Compiles every file in strict mode
    // strictNullChecks // Values "null" and "undefined" can only be assigned to values of this type and with type "any"
    // strictFunctionTypes // Checks to ensure parameters and the return values are subtype-compatible (not only check variables types in function, but also in general function type, can't define general type with less parameter type to function with wider parameter type).
    // strictPropertyInitialization // Checks that class properties that have undefined values get new values inside the constructor
    "noFallthroughCasesInSwitch": true, // Shows an error if there is no break or return in the switch-case
    "noImplicitReturns": true, // Shows an error when not all code paths in a function return a value
    "noUnusedLocals": true, // Shows an error if unused local values are found somewhere
		"noUnusedParameters": true, // Shows an error if unused parameters are found somewhere.
    "skipLibCheck": true // Don't check types defined in all type declaration files (*.d.ts)
  }
}

